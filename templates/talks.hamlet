<div id=topbar>
  <a href=@{HomeR}>
    <div id=logo>
      :: TED -> [SRT]
  <form id=search_form method=GET action=@{HomeR}>
    <input id=search_button type=submit value=SRT>
    ^{widget}
<div id=main data-tid=#{tid talk} data-fname=#{srtName talk} data-lag=#{srtLag talk}>
  <p>Talk page: #
    <a href=#{q'}>#{title talk}
    <a class=show-av href="#">Show audio/video links
  <div class=av>
    <p class=audio>Audio:
    <p class=video>Video:
  <fieldset id=srt>
    <legend>Available Subtitles
    $if (length $ srtLang talk) > 1
      $forall (lang, code) <- tail $ srtLang talk
        <li data-lang=#{code}>#{lang}
    $else 
      <p>No subtitles available!

<center>
  <input id=download class=button value=Download />
  <input id=watch class=button value=Watch />
